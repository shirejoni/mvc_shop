<header class="clearfix">
    <div class="bigWrap">
        <div id="category">
            <a href="#">
                <i class="fa fa-bars"></i>
                موضوعات
            </a>
            <div id="category-box">
                <ul id="main-category">
                    {% for TopCategory in TopCategories %}
                        <li class="active">
                            <a href="#">
                                {{ TopCategory['name'] }}
                                <i class="fa fa-angle-left"></i>
                            </a>
                            <div class="sub-category-box">
                                {% set CategoryCount = 0 %}
                                <div class="column">
                                    <ul>
                                {% for SubCategory in TopCategory['subCategories'] %}
                                    {% if CategoryCount == 13 %}
                                        <div class="column">
                                            <ul>
                                    {% endif %}
                                    {% if SubCategory['level'] == 1 %}
                                        <li class="title"><a href="#">{{ SubCategory['name'] }}</a></li>
                                    {% else %}
                                        <li><a href="#">{{ SubCategory['name'] }}</a></li>
                                    {% endif %}

                                    {% if CategoryCount == 13 %}
                                            </ul>
                                        </div>
                                        {% set CategoryCount = 0 %}
                                    {% endif %}

                                    {% set CategoryCount = CategoryCount + 1 %}
                                {% endfor %}
                                    </ul>
                                </div>

                            </div>
                        </li>

                    {% endfor %}

                </ul>
                <div id="category-ads">
                    <img src="{{ URL }}assets/img/ads/ads.png" alt="Category Ads">
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div id="logo">
            <img src="{{ URL }}assets/img/logo.png" alt="Site Logo">
        </div>
        <div id="cart-search">
            <div class="search">
                <div id="search-field">
                    <input type="text" placeholder="جستجو...">
                </div>
                <i class="fa fa-search"></i>
            </div>
            <div class="shopping">
                <i class="fa fa-shopping-cart" id="shopping-cart-btn"></i>
                <section id="shopping-cart-box">
                    <div class="shopping-cart-header">
                        مبلغ کل خرید:
                        <span id="shopping-cart-box-total-price" class="price">0</span>
                        <span class="toman">تومان</span>
                    </div>
                    <div class="shopping-cart-body" id="shopping-cart-box-body">

                    </div>
                    <div class="shopping-cart-footer">
                        <a href="{{ URL }}checkout/index"> ثبت سفارش و ارسال
                        </a>
                    </div>
                </section>
            </div>
            <div class="clear"></div>
        </div>
    </div>

</header>