{% extends "_temp/_blank_page_temp.twig" %}
{% block Content %}

    
    <div class="bigWrap">
        <div class="message-box success-box" id="top-success-message-box" style="display: none;">
            <h4>موفقیت!</h4>
            <hr>
            <div class="messages">

            </div>
        </div>
        <div class="message-box error-box" id="top-error-message-box" style="display: none;">
            <h4>خطا!</h4>
            <hr>
            <div class="messages">

            </div>
        </div>
        <section class="product-header clearfix">
            <div class="product-header-images-box">
                <div class="product-header-show-image">
                    <img src="http://myshopdemo.test/assets/cache/img/product/53828791-700x490.jpg" alt="Product Image">
                </div>
                <div class="product-header-images-thumbnail" style="direction: rtl">
                    <div class="product-header-image-thumbnail selected">
                        <img src="http://myshopdemo.test/assets/cache/cache/img/product/53828791-700x490-100x100.jpg" data-image-src="http://myshopdemo.test/assets/cache/img/product/53828791-700x490.jpg" alt="Product Thumbnail">
                    </div>
                    <div class="product-header-image-thumbnail ">
                        <img src="http://myshopdemo.test/assets/cache/cache/img/product/53828651-700x490-100x100.jpg" data-image-src="http://myshopdemo.test/assets/cache/img/product/53828651-700x490.jpg" alt="Product Thumbnail">
                    </div>
                </div>
            </div>
            <div class="product-header-information-box">
                <div class="product-title">{{ Product['name'] }}</div>
                <div class="product-manufacturer-category-box clearfix">
                    <div class="product-manufacturer">
                        نام تولیدکننده:
                        <a href="{{ URL }}manufacturer/{{ Product['manufacturer_url'] }}" >{{ Product['manufacturer_name'] }}</a>
                    </div>
                    <div class="product-category">
                        دسته بندی:
                        <a href="{{ URL }}category/{{ Product['category_id'] }}" >{{ Product['category_name'] }}</a>
                    </div>
                </div>
                <div class="product-rating">
                    <div class="rating-stars text-center" data-review-value="5">
                        <ul id="stars">
                            <li class="star selected" title="Poor" data-value="1">
                                <i class="fa fa-star fa-fw"></i>
                            </li>
                            <li class="star selected" title="Fair" data-value="2">
                                <i class="fa fa-star fa-fw"></i>
                            </li>
                            <li class="star selected" title="Good" data-value="3">
                                <i class="fa fa-star fa-fw"></i>
                            </li>
                            <li class="star selected" title="Excellent" data-value="4">
                                <i class="fa fa-star fa-fw"></i>
                            </li>
                            <li class="star selected" title="WOW!!!" data-value="5">
                                <i class="fa fa-star fa-fw"></i>
                            </li>
                        </ul>
                        <span class="rating-counter">
                            از 3 رای
                        </span>
                    </div>
                </div>
                <div class="product-status">
                    وضعیت محصول:
                    <span class="{{ Product['stock_status_class'] }}">{{ Product['stock_status'] }}</span>
                </div>
                <div class="product--price">
                    قیمت محصول:
                    {% if Product['special'] == '' %}
                        <span>{{ Product['price'] }}</span>
                        <span class="unit">تومان</span>
                    {% else %}
                        <span class="old">{{ Product['price'] }}</span>
                        <span class="new">{{ Product['special'] }}</span>
                        <span class="unit">تومان</span>
                    {% endif %}


                </div>
                <div class="product-options">
                    <div class="product-option option-color" id="product-option-25">
                        <div class="product-option-title">
                            رنگ محصول:
                        </div>
                        <div class="product-option-items">
                            <div class="product-option-item" data-price-value="0" data-price-prefix="+" data-product-option-id="25" data-product-option-value-id="37">
                                <div class="product-option-item-image">
                                    <img src="http://myshopdemo.test/assets/img/option/yellow.jpg" alt="">
                                </div>
                                <div class="product-option-item-title">
                                    زرد
                                </div>
                            </div>
                            <div class="product-option-item" data-price-value="20000" data-price-prefix="+" data-product-option-id="25" data-product-option-value-id="38">
                                <div class="product-option-item-image">
                                    <img src="http://myshopdemo.test/assets/img/option/black.jpg" alt="">
                                </div>
                                <div class="product-option-item-title">
                                    سیاه
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="product-option " id="product-option-26">
                        <div class="product-option-title">
                            گارانتی:
                        </div>
                        <div class="product-option-items">
                            <div class="product-option-item" data-price-value="10000" data-price-prefix="+" data-product-option-id="26" data-product-option-value-id="39">
                                <div class="product-option-item-image">
                                    <img src="http://myshopdemo.test/assets/img/guarantee/avagang.png" alt="">
                                </div>
                                <div class="product-option-item-title">
                                    آواژنگ
                                </div>
                            </div>
                            <div class="product-option-item" data-price-value="5000" data-price-prefix="+" data-product-option-id="26" data-product-option-value-id="40">
                                <div class="product-option-item-image">
                                    <img src="http://myshopdemo.test/assets/img/guarantee/hami.png" alt="">
                                </div>
                                <div class="product-option-item-title">
                                    حامی
                                </div>
                            </div>
                        </div>
                    </div>





                </div>
                <div class="product-add-to-cart">
                    <div id="addon-price">
                    </div>
                    <div>
                        <input type="number" id="product-quantity" class="product-quantity" value="1">
                    </div>
                    <div id="add-to-cart">
                        <i class="fa fa-shopping-cart"></i>
                        <span>
                             افزودن به سبد خرید
                        </span>
                    </div>
                </div>
            </div>

        </section>
        <section class="product-description">
            <div class="section-tittle" id="product-head-tab">
                <ul>
                    <li class="selected"><a href="#product-description" >نقد و بررسی</a></li>
                    <li><a href="#product-attributes" >مشخصات</a></li>
                    <li><a href="#product-reviews" >نظرات</a></li>
                </ul>
            </div>
            <div class="section-body" id="product-content-tab">
                <div id="product-description" >
                    {% autoescape false %}
                        {{ Product['description'] }}
                    {% endautoescape %}
                </div>
                <div id="product-attributes" class="active">
                    <table>
                        {% for AttributeGroupRow in Product['attributes'] %}
                            <tr class="group">
                                <td colspan="2">
                                    {{ AttributeGroupRow['name'] }}
                                </td>
                            </tr>
                            {% for AttributeRow in AttributeGroupRow['attributes'] %}
                                <tr>
                                    <td>{{ AttributeRow['name'] }}</td>
                                    <td>{{ AttributeRow['value'] }}</td>
                                </tr>
                            {% endfor %}
                        {% endfor %}



                    </table>
                </div>
                <div id="product-reviews">
                    <div class="review-form">
                        <div class="message-box success-box" id="success-message-box" style="display: none;">
                            <h4>موفقیت!</h4>
                            <hr>
                            <div class="messages">

                            </div>
                        </div>
                        <div class="message-box error-box" id="error-message-box" style="display: none;">
                            <h4>خطا!</h4>
                            <hr>
                            <div class="messages">

                            </div>
                        </div>
                        <div class="input-label clearfix">
                            <div class="label">
                                نام:
                            </div>
                            <div class="input">
                                <input type="text" id="product-comment-name" placeholder="نام">
                            </div>
                        </div>
                        <div class="input-label clearfix">
                            <div class="label">
                                نظر:
                            </div>
                            <div class="input">
                                <textarea id="product-comment-description" cols="30" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="comment-rating" id="comment-rating">
                            <div class="rating-stars text-center">
                                <ul id="stars">
                                    <li class="star" title="Poor" data-value="1">
                                        <i class="fa fa-star fa-fw"></i>
                                    </li>
                                    <li class="star" title="Fair" data-value="2">
                                        <i class="fa fa-star fa-fw"></i>
                                    </li>
                                    <li class="star" title="Good" data-value="3">
                                        <i class="fa fa-star fa-fw"></i>
                                    </li>
                                    <li class="star" title="Excellent" data-value="4">
                                        <i class="fa fa-star fa-fw"></i>
                                    </li>
                                    <li class="star" title="WOW!!!" data-value="5">
                                        <i class="fa fa-star fa-fw"></i>
                                    </li>
                                </ul>
                                <span class="rating-counter">
                        </span>
                            </div>
                        </div>
                        <div class="input-label clearfix">
                            <div class="input">
                                <button id="add-review-btn" class="add-review-btn">ارسال</button>
                            </div>
                        </div>

                    </div>
                    <div class="reviews">
                        <div class="review">
                            <div class="review-author">
                                حسین شیره جونی
                            </div>
                            <div class="review-rate">
                                <div class="rating-stars text-center" data-review-value="5">
                                    <ul id="stars">
                                        <li class="star selected" title="Poor" data-value="1">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Fair" data-value="2">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Good" data-value="3">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Excellent" data-value="4">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="WOW!!!" data-value="5">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="review-text">
                                محصول خیلی خوبی بود ممنون از فروشگاه من که سریع ارسال کردند
                            </div>
                        </div>

                        <div class="review">
                            <div class="review-author">
                                محمد
                            </div>
                            <div class="review-rate">
                                <div class="rating-stars text-center" data-review-value="5">
                                    <ul id="stars">
                                        <li class="star selected" title="Poor" data-value="1">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Fair" data-value="2">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Good" data-value="3">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Excellent" data-value="4">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="WOW!!!" data-value="5">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="review-text">
                                خیلی خوب بود
                            </div>
                        </div>

                        <div class="review">
                            <div class="review-author">
                                حسین
                            </div>
                            <div class="review-rate">
                                <div class="rating-stars text-center" data-review-value="4">
                                    <ul id="stars">
                                        <li class="star selected" title="Poor" data-value="1">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Fair" data-value="2">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Good" data-value="3">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star selected" title="Excellent" data-value="4">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                        <li class="star" title="WOW!!!" data-value="5">
                                            <i class="fa fa-star fa-fw"></i>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="review-text">
                                یک محصول خوب
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}